#:kivy 1.0

<PlayerScoreHUD@BoxLayout>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: root.bg_color

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [root.top_left, root.top_right, root.bottom_right, root.bottom_left]
            
    Label:
        text: root.name
        font_attr: 'bold'
        font_size: '18sp'
        color: root.text_color
    
    Label: 
        text: root.score
        font_size: '18sp'
        color: root.text_color

   
